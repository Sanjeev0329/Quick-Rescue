<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".profile">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="25dp"
            android:outlineProvider="none"
            app:cardBackgroundColor="#86F3DD9F"
            app:cardElevation="5dp">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/linearegister"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    app:layout_constraintEnd_toEndOf="parent">






                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/profile"
                        android:textAllCaps="true"
                        android:textColor="@color/purple_500"
                        android:textSize="23dp"
                        android:textStyle="bold" />





                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:hint="Enter your Name"
                        android:textColorHint="@color/black"
                        app:boxStrokeColor="@color/black"
                        app:counterOverflowTextColor="@color/black"
                        app:hintTextColor="@color/black"
                        app:boxCornerRadiusBottomEnd="25sp"
                        app:boxCornerRadiusBottomStart="25dp"
                        app:boxCornerRadiusTopEnd="25sp"
                        app:boxCornerRadiusTopStart="25sp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:inputType="text"
                            android:textColor="@color/black"
                            tools:ignore="TouchTargetSizeCheck" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:hint="Enter Your Number"
                        android:textColorHint="@color/black"
                        app:boxStrokeColor="@color/black"
                        app:counterOverflowTextColor="@color/black"
                        app:hintTextColor="@color/black"
                        app:boxCornerRadiusBottomEnd="25sp"
                        app:boxCornerRadiusBottomStart="25dp"
                        app:boxCornerRadiusTopEnd="25sp"
                        app:boxCornerRadiusTopStart="25sp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etunum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:inputType="number"
                            android:maxLength="10"
                            tools:ignore="TouchTargetSizeCheck" />

                    </com.google.android.material.textfield.TextInputLayout>





                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:hint="Enter your Address"
                        android:textColorHint="@color/black"
                        app:boxStrokeColor="@color/black"
                        app:counterOverflowTextColor="@color/black"
                        app:hintTextColor="@color/black"
                        app:boxCornerRadiusBottomEnd="25sp"
                        app:boxCornerRadiusBottomStart="25dp"
                        app:boxCornerRadiusTopEnd="25sp"
                        app:boxCornerRadiusTopStart="25sp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etuaddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:inputType="text"
                            tools:ignore="TouchTargetSizeCheck" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:hint="Enter your city name(Eg Tirupati)"
                        android:textColorHint="@color/black"
                        app:boxStrokeColor="@color/black"
                        app:counterOverflowTextColor="@color/black"
                        app:hintTextColor="@color/black"
                        app:boxCornerRadiusBottomEnd="25sp"
                        app:boxCornerRadiusBottomStart="25dp"
                        app:boxCornerRadiusTopEnd="25sp"
                        app:boxCornerRadiusTopStart="25sp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etucity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:inputType="text"
                            tools:ignore="TouchTargetSizeCheck" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout

                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:hint="Enter your Password"
                        android:textColorHint="@color/black"
                        app:boxStrokeColor="@color/black"
                        app:counterOverflowTextColor="@color/black"
                        app:hintTextColor="@color/black"
                        app:boxCornerRadiusBottomEnd="25sp"
                        app:boxCornerRadiusBottomStart="25dp"
                        app:boxCornerRadiusTopEnd="25sp"
                        app:boxCornerRadiusTopStart="25sp"
                        app:passwordToggleEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etupass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:inputType="textPassword"
                            tools:ignore="TouchTargetSizeCheck" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnsubmit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:backgroundTint="@color/purple_500"
                        android:text="update"
                        android:textAllCaps="true" />




                </LinearLayout>

            </ScrollView>


        </androidx.cardview.widget.CardView>



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>